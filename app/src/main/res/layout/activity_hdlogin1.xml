<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical"
        tools:context=".Hdlogin1">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="403dp"
                android:layout_height="208dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:scaleType="fitXY"
                android:src="@drawable/hdlo" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="FIELD OFFICER"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="90dp"
                android:textColor="#0470b8"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:background="@color/c"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="25dp"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/pfno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25sp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="0dp"
                android:drawableLeft="@drawable/logout"
                android:layout_marginEnd="25dp"
                android:textColor="#09d3bf"
                android:layout_marginRight="25sp"
                android:background="@drawable/but_background"
                android:hint="PF NO"
                android:inputType="text"
                android:padding="10dp"
                android:textColorHint="#212121" />

            <EditText
                android:id="@+id/dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25sp"
                android:layout_marginLeft="25dp"
                android:drawableLeft="@drawable/lock"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="25dp"
                android:textColor="#09d3bf"
                android:layout_marginRight="25sp"
                android:background="@drawable/but_background"
                android:hint="dd/mm/yyyy"
                android:inputType="date"
                android:padding="10dp"
                android:textColorHint="#212121" />

            <Button
                android:id="@+id/signin"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/sign_in_button_background"
                android:text="SIGN IN"
                android:textColor="@android:color/white" />

        </LinearLayout>
</RelativeLayout>